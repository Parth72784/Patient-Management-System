@model PatientManageSystem.Models.StaffManage

@{
    Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<div class="container mt-0">
